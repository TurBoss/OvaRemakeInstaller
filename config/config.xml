<?xml version="1.0" encoding="UTF-8"?>
<Installer>

    <Name>TurBo FF7 installer</Name>
    <Version>1.0.0</Version>

    <Title>Final Fantasy 7 installer</Title>
    <Publisher>TurBoss</Publisher>
    <ProductUrl>https://github.com/turboss</ProductUrl>
    <RunProgramDescription>Final Fantasy 7 installer</RunProgramDescription>
    <MaintenanceToolName>TurBo FF7 installer</MaintenanceToolName>
    <MaintenanceToolIniFile>Maintenance</MaintenanceToolIniFile>

    <InstallerApplicationIcon>ff7icon</InstallerApplicationIcon>
    <InstallerWindowIcon>ff7icon64</InstallerWindowIcon>

    <WizardStyle>Modern</WizardStyle>
    <Banner>turbo-banner.png</Banner>
    <Watermark>turbo-watermak.png</Watermark>
    <Background>turbo-background.png</Background>
    
    <WizardDefaultWidth>640</WizardDefaultWidth>
    <WizardDefaultHeight>400</WizardDefaultHeight>

    <AllowSpaceInPath>true</AllowSpaceInPath>
    <AllowNonAsciiCharacters>true</AllowNonAsciiCharacters>
    <TargetDir>C:/games/Final7</TargetDir>
    <ControlScript>controlscript.js</ControlScript>

</Installer>
